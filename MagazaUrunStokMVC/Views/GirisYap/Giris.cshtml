<body>
    <h1>Giriş Paneli</h1>
    <div class=" w3l-login-form">
        <h2>Login</h2>
        @using (Html.BeginForm("Giris", "GirisYap", FormMethod.Post))
        {

        

            <div class=" w3l-form-group">
                <label>Kullanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="kullanici adi" required="required" name="kullanici"/>
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="sifre" required="required" name="sifre" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Şifreni mi Unuttun ?</a>
                <p><input type="checkbox">Beni Hatırla</p>
            </div>
            <button type="submit">Giriş</button>
        }
        <p class=" w3l-register-p">Hesabın Yok Mu ?<a href="#" class="register"> Kayıt Ol</a></p>
    </div>
  

</body>

